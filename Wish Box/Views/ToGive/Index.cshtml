@model List<Wish_Box.Models.Wish>

@{
    ViewData["Title"] = "Подарить";
}

<div class="col-sm-8 col-lg-8 col-md-8">
    <h2 style="color:white; text-align: center; font-weight: bold; margin-bottom: 20px;">Подарить</h2>
    <div class="row">
        @foreach (var wish in Model)
        {
            <div class="col-6">
                <div class="wish-block">
                    <div style="transform: translate(10%, 20%); text-align:center">
                        <label class="description">@wish.Description</label>
                        <div class="attachment">
                            @if (wish.Attachment != null)
                            {
                                <img src="@Url.Content(wish.Attachment)" />
                            }
                            else
                            {
                                <img src="~/Content/gift.png" />
                            }
                        </div>
                        <p>Автор: <a class="btn-default user-link" asp-controller="UserPage" asp-action="Show" asp-route-id="@wish.User.Login">@wish.User.Login</a></p>
                            <form asp-controller="ToGive" asp-action="MarkAsGiven" asp-route-id="@wish.Id" method="post">
                                <input class="btn" type="submit" value="Отметить как &quot;подарено&quot;" />
                            </form>
                            <form asp-controller="ToGive" asp-action="Remove" asp-route-id="@wish.Id" method="post">
                                <input class="btn btn-outline-dark btn-remove-togive-mark" type="submit" value="Убрать из &quot;Подарить&quot;" />
                            </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
