@model Wish_Box.ViewModels.LoginModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Вход на сайт</h2>


<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label asp-for="Login">Введите Логин</label>
            <input type="text" class="form-control" asp-for="Login" />
            <span asp-validation-for="Login"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            <input type="password" class="form-control" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
