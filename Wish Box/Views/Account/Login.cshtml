@model Wish_Box.ViewModels.LoginModel
@{
    ViewData["Title"] = "Login";
}
    <div class="modal-content sign-in-window">
        <div class="modal-header">
            <h2 style="margin-left:auto; margin-right:auto;">Вход</h2>             
        </div>
        <div class="modal-body">
            <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly" />
                <div>
                    <div class="form-group">
                        <label asp-for="Login"><strong>Введите Логин</strong></label>
                        <input type="text" class="form-control" asp-for="Login" />
                        <span asp-validation-for="Login" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"><strong>Введите пароль</strong></label>
                        <input type="password" class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password" />
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-success sign-in-btn" type="submit" value="Войти" class="btn btn-outline-dark" />
                    </div>
                </div>
            </form>
        </div>
    </div>
